<Window x:Class="PizzaDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaDelivery"
        xmlns:view="clr-namespace:PizzaDelivery.Views"
        xmlns:viewms="clr-namespace:PizzaDelivery.ViewModels"
        mc:Ignorable="d"
        Title="Пиццерия" Height="600" Width="900" Icon="/ImagesForProject/mainicon.png"
        d:DataContext="{d:DesignInstance viewms:AuthorizationVM}">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewms:AuthorizationVM}">
                <view:AuthorizationPresentation/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewms:ProfilePresentationVM}">
                <view:ProfilePresentation/>
            </DataTemplate>
        </Grid.Resources>
        
            <!--<view:AuthorizationPresentation DataContext="{Binding CurrentViewModel}"/>-->
        <!--<view:PizzaSelectionView DataContext="{Binding CurrentViewModel}"/>-->
        <!--<view:ProfilePresentation DataContext="{Binding CurrentViewModel}"/>-->
        <ContentControl Content="{Binding CurrentViewModel}"/>

    </Grid>
    
</Window>
